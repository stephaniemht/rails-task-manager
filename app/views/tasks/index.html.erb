<div class="container">
  <h1>Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
    <% end %>
  </ul>
    <%= link_to "Add a task", tasks_new_path(@task) %>
</div>
